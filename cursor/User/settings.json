{
  "window.commandCenter": true,
  "workbench.colorTheme": "Default Dark Modern",
  "crashReporting.enabled": "off",
  "window.zoomLevel": 1,
  "editor.fontSize": 13,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.fontFamily": "MesloLGS Nerd Font Mono",
  "workbench.sideBar.location": "right",
  "terminal.integrated.cursorBlinking": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.timeout": 200,
  // "vim.useCtrlKeys": true,
  "vim.smartRelativeLine": true,
  "vim.leader": "<Space>",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#a9dc7660",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "y"],
      "commands": [
        {
          "command": "editor.action.clipboardCopyAction"
        },
        {
          "command": "extension.vim_escape"
        }
      ]
    },
    {
      "before": ["<leader>", "p"],
      "commands": [
        {
          "command": "vim.remap",
          "args": {
            "after": ["\"", "_", "d", "P"]
          }
        }
      ]
    },
    {
      "before": ["<leader>", "d"],
      "commands": [
        {
          "command": "vim.remap",
          "args": {
            "after": ["\"", "_", "d"]
          }
        }
      ]
    }
  ],

  "vim.visualModeKeyBindings": [
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    }
  ],
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // END OF VIM SETTINGS
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.insert": "#EBCB8B",
  "vim.statusBarColors.visual": "#A3BE8C",
  "vim.statusBarColors.visualline": "#A3BE8C",
  "vim.statusBarColors.visualblock": "#B48EAD",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#E5E9F0",
  "vim.statusBarColors.searchinprogressmode": "#E5E9F0",
  "vim.statusBarColors.easymotionmode": "#E5E9F0",
  "vim.statusBarColors.easymotioninputmode": "#E5E9F0",
  "vim.statusBarColors.surroundinputmode": "#E5E9F0",
  "workbench.colorCustomizations": {
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E",
    "editorRuler.foreground": "#c1af6d"
  },
  "workbench.iconTheme": "material-icon-theme",
  "catppuccin-noctis-icons.hidesExplorerArrows": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.activityBar.orientation": "vertical",
  "git.confirmSync": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "git.openRepositoryInParentFolders": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorSurroundingLines": 16,
  "files.exclude": {
    "!**/.git/hooks": true
  }
}
