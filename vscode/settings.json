{
  // ##############
  // General Settings
  // ##############
  "window.zoomLevel": 1.5,
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "right",
  //   "workbench.colorCustomizations": {
  //     "editorSuggestWidget.selectedBackground": "#231739",
  //     "sideBar.background": "#191521",
  //     "list.activeSelectionBackground": "#231739",
  //     "list.inactiveSelectionBackground": "#231739",
  //     "list.focusBackground": "#231739",
  //     "list.hoverBackground": "#231739",
  //     "terminalCursor.foreground": "#C45DFF"
  //   },

  // ##############
  // Editor Settings
  // #############
  "editor.minimap.enabled": true,
  "editor.renderLineHighlight": "gutter",
  "editor.lightbulb.enabled": "off",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  // "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 14,
  "editor.parameterHints.enabled": false,

  "editor.inlineSuggest.enabled": true,
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.cursorSurroundingLines": 8,
  "editor.stickyScroll.enabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80],
  "editor.accessibilitySupport": "off",

  "explorer.compactFolders": false,
  //   "explorer.confirmDelete": true,
  //   "explorer.confirmDragAndDrop": true,

  "extensions.ignoreRecommendations": true,

  // ##############
  // Terminal Settings
  // #############
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": false,

  // ##############
  // APC Customize UI
  // #############
  "apc.electron": {
    "titleBarStyle": "hidden"
  },

  "diffEditor.ignoreTrimWhitespace": false,
  "redhat.telemetry.enabled": false,

  // ##############
  // Git Settings
  // ##############
  "git.openRepositoryInParentFolders": "always",
  "git.confirmSync": false,

  // ##############
  // Search Settings
  // ##############
  "search.exclude": {
    "**/.fvm": true
  },
  "search.useIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,

  // ##############
  // File Watching Exclusions
  // ##############
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true,
    "**/.fvm": true
  },

  // ##############
  // Language-Specific Settings
  // ##############
  "dart.debugSdkLibraries": true,
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[python]": {
    // "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[firestorerules]": {
    "editor.defaultFormatter": "ChFlick.firecode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  // ##############
  // Zen mode
  // ##############
  "zenMode.hideStatusBar": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": true,
  "zenMode.centerLayout": true,
  // ##############
  // Vim Settings
  // ##############
